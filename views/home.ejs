<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

		<link rel="stylesheet" href="/stylesheets/home.css">
		<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
		<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>

        <link rel="icon" href="/images/icon 16x16.png" type="image/png">
        <title>CoinTopper</title>
    </head>
    <body>

		<header>
			<nav id="navbar">
				<div id="logo">
					<a href="/"><img src="/images/logo 256x64.png"></a>
					<span id="toggle-icon">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</span>
				</div>
				<ul>
					<li><a href="/" class="active">Home</a></li>
					<li><a href="#">ICOs</a></li>
					<li><a href="#">Airdrop</a></li>
					<li><a href="#">News</a></li>
					<li><a href="#">Guides</a></li>
					<li><a href="#">Hire Experts</a></li>
					<li><a href="#">Login</a></li>
				</ul>
			</nav>
			<div id="headline">
				<section>
					<div class="headline-item hidden-small">
						<h4>BTC/USD</h4>
						<span>$9120.78</span>
					</div>
					<div class="headline-item hidden-small">
						<h4>Cryptocurrencies</h4>
						<span>1554</span>
					</div>
					<div class="headline-item">
						<h4>24h Volume</h4>
						<span>$137.7 B</span>
					</div>
					<div class="headline-item">
						<h4>AltCoin M.Cap</h4>
						<span>$100.5 B</span>
					</div>
					<div class="headline-item">
						<h4>Total M.Cap</h4>
						<span>$267 B</span>
					</div>
				</section>
			</div>
		</header>

		<main>
			<div class="container">
				<div class="col">
					<div class="row row-between">
						<!-- Title: Top Viewed -->
						<h2 class="title">
						Top Viewed
						</h2>
						<a href="#" class="btn btn-page">View All</a href="#">
					</div>
					<div class="row row-around">
						<!-- Top Viewed Icons -->
						<ul class="wrapper">
							<% for(var i=0; i<15; i++) { %>
								<li>
									<div class="top">
										<span class="top-name">CoinName</span>
										<span class="top-value">$0000.00</span>
										<span class="top-change">
											<img src="/images/up.png" class="change-icon">
											<span class="change-value">0.00%</span>
										</span>
										<img src="/images/top-icon.png" class="top-icon">
									</div>
								</li>
							<% } %>
						</ul>
					</div>
				</div>
			</div>
		</main>

		<footer>
		
		</footer>

		<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
		<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
		<script type="text/javascript" src="/scripts/home.js"></script>
	</body>
</html>